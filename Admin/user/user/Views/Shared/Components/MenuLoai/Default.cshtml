@model IEnumerable<user.ViewModels.MenuLoaiVM>

<div class="col-lg-12">
	<div class="mb-3">
		<h4>Danh mục</h4>
		<ul class="list-unstyled fruite-categorie">
			@foreach (var item in Model)
			{
				<li>
					<div class="d-flex justify-content-between fruite-name">
						<a asp-controller="SanPham" asp-action="Index" asp-route-loai="@item.MaLoai">
							<i></i>@item.TenLoai
						</a>

					</div>
				</li>
			}

		</ul>
	</div>
</div>